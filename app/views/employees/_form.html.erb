<%= form_for @employee, :html => { :class => "form-horizontal employee" } do |f| %>

    <% if @employee.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:first_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:last_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :annual_salary, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :annual_salary, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:annual_salary]) %>
  </div>
  <div class="control-group">
    <%= f.label :super_rate, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :super_rate, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:super_rate]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            employees_path, :class => 'btn btn-default' %>
            

<% end %>
