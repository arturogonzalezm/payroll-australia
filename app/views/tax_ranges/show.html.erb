<%- model_class = TaxRange -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:income_min) %>:</strong></dt>
  <dd><%= @tax_range.income_min %></dd>
  <dt><strong><%= model_class.human_attribute_name(:income_max) %>:</strong></dt>
  <dd><%= @tax_range.income_max %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @tax_range.rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tax_from_lower_range) %>:</strong></dt>
  <dd><%= @tax_range.tax_from_lower_range %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              tax_ranges_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tax_range_path(@tax_range), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tax_range_path(@tax_range),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
