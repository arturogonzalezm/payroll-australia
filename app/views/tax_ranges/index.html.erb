<%- model_class = TaxRange -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:income_min) %></th>
      <th><%= model_class.human_attribute_name(:income_max) %></th>
      <th><%= model_class.human_attribute_name(:rate) %></th>
      <th><%= model_class.human_attribute_name(:tax_from_lower_range) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tax_ranges.each do |tax_range| %>
      <tr>
        <td><%= link_to tax_range.id, tax_range_path(tax_range) %></td>
        <td><%= tax_range.income_min %></td>
        <td><%= tax_range.income_max %></td>
        <td><%= tax_range.rate %></td>
        <td><%= tax_range.tax_from_lower_range %></td>
        <td><%=l tax_range.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tax_range_path(tax_range), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tax_range_path(tax_range),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tax_range_path,
            :class => 'btn btn-primary' %>
